@model IEnumerable<Capstone4.Models.ServiceRequest>

@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped" id="homeTable" >
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Homeowner.Username)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Homeowner.ApplicationUser.Email)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Address.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.Zip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletionDeadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contractor.Username)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Address.vacant)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Address.validated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inactive)
        </th>  
        <th></th>
    </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Homeowner.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Homeowner.ApplicationUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.Zip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompletionDeadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Service_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expired)
            <div style="display: none;">@item.Expired</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contractor.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.vacant)
            <div style="display: none;">@item.Address.vacant</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.validated)
            <div style="display: none;">@item.Address.validated</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inactive)
            <div style="display: none;">@item.Inactive</div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
        </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="~/Content/DataTables.css" media="all" rel="stylesheet" type="text/css" />
    <link href="~/Content/ResponsiveDatatables.css" media="all" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/DataTableWhiteSpaceForHeaderScroll.css" media="all" rel="stylesheet" type="text/css" />*@
    <script src="~/Scripts/DataTables.js" type="text/javascript"></script>
    @*<script src="~/Scripts/FixedColumnDataTable.js" type="text/javascript"></script>*@
    <script src="~/Scripts/ResponiveDataTables.js" type="text/javascript"></script>

    <script>
        $.extend(true, $.fn.dataTable.defaults, {
            "columnDefs": [
                { "orderable": false, "targets": 16 }
            ]
        });


        $(document).ready(function () {
            var table = $('#homeTable').DataTable({
                scrollY: "500px",
                scrollX: true,
                responsive: true,
                scrollCollapse: true,
                paging: true,
                fixedColumns: {
                    leftColumns: 1,
                    leftColumns: 2,
                    leftColumns: 3,
                    leftColumns: 4,
                    leftColumns: 5,
                    leftColumns: 6
                }
            });
        });
            //$('#homeTable').DataTable({
            //    scrollX: 500

            //});
    </script>

}


