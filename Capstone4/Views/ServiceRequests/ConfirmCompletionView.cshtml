                         '</div>' +
                     '</div>' +
                 '</div>';
            $("div.body-content").append(MyHtml);
            $("img[not-to-enlarge!=true]").click(showModal);
            $("img[not-to-enlarge!=true]").css("cursor", "pointer");
        });
    </script>
