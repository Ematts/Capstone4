@model Capstone4.Models.ServiceRequest

@{
    ViewBag.Title = "EditManual";
}

<h2>EditManual</h2>

@using (Html.BeginForm("EditManual", "ServiceRequests", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "requestForm" }))
{
    @Html.AntiForgeryToken()
    <head>
        <link href="~/Content/auto.css" media="all" rel="stylesheet" type="text/css" />
    </head>

    <div class="form-horizontal">
        <h4>ServiceRequest</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.PostedDate)
        @Html.HiddenFor(model => model.AddressID)
        @Html.HiddenFor(model => model.HomeownerID)
        @Html.HiddenFor(model => model.ContractorID)
        @Html.HiddenFor(model => model.ContractorReviewID)
        @Html.HiddenFor(model => model.CompletionDate)
        @Html.HiddenFor(model => model.AmountDue)
        @Html.HiddenFor(model => model.ContractorPaid)
        @Html.HiddenFor(model => model.Service_Number)
        @Html.HiddenFor(model => model.Address.FullAddress)
        @Html.HiddenFor(model => model.ServiceRequestFilePaths)
        @Html.HiddenFor(model => model.PayPalListenerModelID)
        @Html.HiddenFor(model => model.Address.ManualValidated)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Price)
        @Html.HiddenFor(model => model.ServiceRequestFilePaths)
        @Html.HiddenFor(model => model.Posted)
        @Html.HiddenFor(model => model.Homeowner)


        <div class="form-group">
            @Html.LabelFor(model => model.CompletionDeadline, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompletionDeadline, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompletionDeadline, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" id="submitRequest" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
