@model Capstone4.Models.ServiceRequest

@{
    ViewBag.Title = "AddReview";
}

<h2>Add Review</h2>
@using (Html.BeginForm("AddReview", "ServiceRequests", Model.ID, FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div>
    <h4>ServiceRequest</h4>
    <hr />
   
        @Html.HiddenFor(model => model.ID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ContractorReview.Review, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContractorReview.Review, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContractorReview.Review, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ContractorReview.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.ValidationMessageFor(model => model.ContractorReview.Rating, "", new { @class = "text-danger" })
        <div class="col-md-10">
            <span class="star">
                <input id="input-id" type="number" class="rating" data-size="lg" name="ContractorReview.Rating">
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Post Review" class="btn btn-default" />
        </div>
    </div>
    
</div>
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
</div>
<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
<link href="~/Content/star-rating.css" media="all" rel="stylesheet" type="text/css" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.js"></script>
<script src="~/Scripts/star-rating.js" type="text/javascript"></script>
<link href="~/Content/theme-krajee-svg.css" media="all" rel="stylesheet" type="text/css" />
<script src="~/Scripts/theme-krajee-svg.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}