@model Capstone4.Models.ServiceRequest

@{
    ViewBag.Title = "Already_Responded";
}

<h2>Already Posted Response</h2>

@{int id = Model.ID; }

<strong>You have already responded to the following review for Service Request #@id.</strong>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Service_Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service_Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contractor.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contractor.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContractorReview.Rating)
        </dt>

        <dd>
            <input id="input-id" type="number" value="@Model.ContractorReview.Rating" class="rating" data-size="xs" name="Rating" data-readonly="true" data-show-clear="false">
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContractorReview.ReviewDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContractorReview.ReviewDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContractorReview.Review)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContractorReview.Review)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.ContractorReview.ReviewResponse.ResponseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContractorReview.ReviewResponse.ResponseDate)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.ContractorReview.ReviewResponse.Response)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContractorReview.ReviewResponse.Response)
        </dd>

    </dl>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/star-rating.css" media="all" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/star-rating.js" type="text/javascript"></script>
    <link href="~/Content/theme-krajee-svg.css" media="all" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/theme-krajee-svg.js"></script>

}